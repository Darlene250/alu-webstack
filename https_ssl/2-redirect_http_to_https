global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000


frontend http_in
    bind *:80
    http-request redirect scheme https code 301


frontend https_in
    bind *:443 ssl crt /etc/haproxy/www.naxowen.tech.pem
    default_backend web_back


backend web_back
    balance roundrobin
    option forwardfor
    option httpclose
    server web01 44.202.91.235:80 check
    server web02 52.90.75.188:80 check
