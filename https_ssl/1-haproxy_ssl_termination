global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

    # SSL settings
    ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets
    ssl-default-bind-ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000
    errorfile 400 /etc/haproxy/errors/400.http
    errorfile 403 /etc/haproxy/errors/403.http
    errorfile 408 /etc/haproxy/errors/408.http
    errorfile 500 /etc/haproxy/errors/500.http
    errorfile 502 /etc/haproxy/errors/502.http
    errorfile 503 /etc/haproxy/errors/503.http
    errorfile 504 /etc/haproxy/errors/504.http

# Redirect all HTTP (Port 80) to HTTPS
frontend http_in
    bind *:80
    mode http
    # Simplified redirect for all HTTP traffic to HTTPS
    redirect scheme https code 301 

# Main HTTPS frontend
frontend https_in
    # *** CORRECTED PATH HERE ***
    bind *:443 ssl crt /etc/haproxy/www.naxowen.tech.pem
    mode http
    option forwardfor
    option httpclose
    default_backend webservers

backend webservers
    mode http
    balance roundrobin
    option forwardfor
    option httpclose

    # Note: Ensure these IPs/Ports are where your application is listening!
    server web01 44.202.91.235:80 check
    server web02 52.90.75.188:80 check
